{
    "manifest_version": 2,
    "name": "QRBot",
    "version": "1.1",
    "description": "Offline QR code generator",
    "author": "Kevin R",
    "homepage_url": "https://github.com/squidpickles/qrbot",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "browser_style": true,
        "default_icon": "icons/icon-32.png",
        "default_title": "QRBot",
        "default_popup": "popup/qrpopup.html"
    }
}
